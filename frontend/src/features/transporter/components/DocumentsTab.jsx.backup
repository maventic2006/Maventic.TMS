import React, { useState, useRef } from "react";
import { FileText } from "lucide-react";
import { useSelector } from "react-redux";
import ThemeTable from "../../../components/ui/ThemeTable";
import { validateFileUpload, fileToBase64 } from "../validation";

const DocumentsTab = ({ formData, setFormData, errors = {} }) => {
  const { masterData } = useSelector((state) => state.transporter);

  const documents = formData.documents || [];

  const formatDate = (dateString) => {
    if (!dateString) return "";
    const date = new Date(dateString);
    const day = date.getDate().toString().padStart(2, "0");
    const month = date.toLocaleDateString("en-US", { month: "short" });
    const year = date.getFullYear();
    return `${day}-${month}-${year}`;
  };

  const addDocument = () => {
    const newDocument = {
      documentType: "",
      documentNumber: "",
      referenceNumber: "",
      country: "",
      validFrom: "",
      validTo: "",
      status: true,
      fileName: "",
      fileType: "",
      fileData: "",
    };

    setFormData((prev) => ({
      ...prev,
      documents: [...prev.documents, newDocument],
    }));
  };

  const removeDocument = (index) => {
    if (documents.length <= 1) return; // Don't allow removing the last document

    const updatedDocuments = documents.filter((_, i) => i !== index);

    setFormData((prev) => ({
      ...prev,
      documents: updatedDocuments,
    }));

    // Clean up file input ref
    delete fileInputRefs.current[index];
  };

  const updateDocument = (index, field, value) => {
    const updatedDocuments = [...documents];
    updatedDocuments[index] = {
      ...updatedDocuments[index],
      [field]: value,
    };

    setFormData((prev) => ({
      ...prev,
      documents: updatedDocuments,
    }));
  };

  const handleFileSelect = async (index, event) => {
    const file = event.target.files[0];
    if (!file) return;

    // Validate file
    const validation = validateFileUpload(file);
    if (!validation.valid) {
      alert(validation.error);
      event.target.value = ""; // Clear the input
      return;
    }

    setUploadingIndex(index);

    try {
      // Convert file to base64
      const base64Data = await fileToBase64(file);

      // Update document with file info
      updateDocument(index, "fileName", file.name);
      updateDocument(index, "fileType", file.type);
      updateDocument(index, "fileData", base64Data);
    } catch (error) {
      console.error("Error converting file to base64:", error);
      alert("Failed to process file. Please try again.");
    } finally {
      setUploadingIndex(null);
    }
  };

  const removeFile = (index) => {
    updateDocument(index, "fileName", "");
    updateDocument(index, "fileType", "");
    updateDocument(index, "fileData", "");

    // Clear file input
    if (fileInputRefs.current[index]) {
      fileInputRefs.current[index].value = "";
    }
  };

  const scrollDocuments = (direction) => {
    if (direction === "left" && scrollIndex > 0) {
      setScrollIndex(scrollIndex - 1);
    } else if (direction === "right" && scrollIndex < documents.length - 3) {
      setScrollIndex(scrollIndex + 1);
    }
  };

  const getFileIcon = (fileType) => {
    if (fileType?.startsWith("image/")) {
      return "üñºÔ∏è";
    } else if (fileType === "application/pdf") {
      return "üìÑ";
    } else if (fileType?.includes("word")) {
      return "üìù";
    }
    return "üìé";
  };

  const formatFileSize = (base64String) => {
    if (!base64String) return "0 KB";
    // Rough estimate: base64 is ~4/3 the size of original
    const sizeInBytes = (base64String.length * 3) / 4;
    const sizeInKB = sizeInBytes / 1024;
    const sizeInMB = sizeInKB / 1024;

    if (sizeInMB >= 1) {
      return `${sizeInMB.toFixed(2)} MB`;
    } else {
      return `${sizeInKB.toFixed(1)} KB`;
    }
  };

  return (
    <div className="bg-white rounded-xl p-6">
      {/* Section Header */}
      <div className="flex items-center justify-between mb-6">
        <div className="flex items-center gap-3">
          <FileText className="w-6 h-6 text-[#0D1A33]" />
          <h2 className="text-xl font-semibold text-[#0D1A33]">
            Transporter Documents
          </h2>
        </div>
        <button onClick={addDocument} className={actionButtonTheme.primary}>
          <Plus className="w-4 h-4" />
          Add Document
        </button>
      </div>

      {/* Documents Table */}
      {documents.length > 0 ? (
        <div className="border border-gray-200 rounded-lg overflow-hidden">
          {/* Table Header */}
          <div className="bg-gray-50 px-4 py-3 border-b border-gray-200">
            <div className="flex items-center justify-between">
              <h3 className="font-medium text-gray-800">Document Details</h3>
              {documents.length > 3 && (
                <div className="flex items-center gap-2">
                  <button
                    onClick={() => scrollDocuments("left")}
                    disabled={scrollIndex === 0}
                    className="p-1 rounded text-gray-500 hover:text-gray-700 disabled:opacity-50"
                  >
                    <ChevronLeft className="w-4 h-4" />
                  </button>
                  <span className="text-sm text-gray-600">
                    {scrollIndex + 1}-
                    {Math.min(scrollIndex + 3, documents.length)} of{" "}
                    {documents.length}
                  </span>
                  <button
                    onClick={() => scrollDocuments("right")}
                    disabled={scrollIndex >= documents.length - 3}
                    className="p-1 rounded text-gray-500 hover:text-gray-700 disabled:opacity-50"
                  >
                    <ChevronRight className="w-4 h-4" />
                  </button>
                </div>
              )}
            </div>
          </div>

          {/* Table Content */}
          <div className="overflow-x-auto">
            <div className="min-w-full">
              {documents
                .slice(scrollIndex, scrollIndex + 3)
                .map((document, displayIndex) => {
                  const actualIndex = scrollIndex + displayIndex;
                  const isUploading = uploadingIndex === actualIndex;

                  return (
                    <div
                      key={actualIndex}
                      className="p-4 border-b border-gray-100"
                    >
                      <div className="flex items-center justify-between mb-4">
                        <span className="text-sm font-medium text-gray-700">
                          Document {actualIndex + 1}
                        </span>
                        <div className="flex items-center gap-2">
                          {/* Status Toggle */}
                          <label className="flex items-center gap-2 cursor-pointer">
                            <div className="relative">
                              <input
                                type="checkbox"
                                checked={document.status !== false}
                                onChange={(e) =>
                                  updateDocument(
                                    actualIndex,
                                    "status",
                                    e.target.checked
                                  )
                                }
                                className="sr-only"
                              />
                              <div
                                className={`w-10 h-5 rounded-full transition-colors ${
                                  document.status !== false
                                    ? "bg-[#14B8A6]"
                                    : "bg-gray-300"
                                }`}
                              >
                                <div
                                  className={`w-4 h-4 bg-white rounded-full shadow transform transition-transform ${
                                    document.status !== false
                                      ? "translate-x-5"
                                      : "translate-x-0.5"
                                  } mt-0.5`}
                                />
                              </div>
                            </div>
                            <span className="text-xs text-gray-600">
                              {document.status !== false
                                ? "Active"
                                : "Inactive"}
                            </span>
                          </label>

                          {documents.length > 1 && (
                            <button
                              onClick={() => removeDocument(actualIndex)}
                              className="text-red-500 hover:text-red-700 text-xs"
                            >
                              Remove
                            </button>
                          )}
                        </div>
                      </div>

                      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {/* Document Type */}
                        <div className="space-y-2">
                          <label className="block text-xs font-medium text-gray-700">
                            Document Type{" "}
                            <span className="text-red-500">*</span>
                          </label>
                          <select
                            value={document.documentType || ""}
                            onChange={(e) =>
                              updateDocument(
                                actualIndex,
                                "documentType",
                                e.target.value
                              )
                            }
                            className={`w-full px-3 py-2 text-sm border rounded focus:outline-none focus:ring-2 focus:ring-blue-500/20 ${
                              errors.documents?.[actualIndex]?.documentType
                                ? "border-red-500"
                                : "border-gray-300"
                            }`}
                          >
                            <option value="">Select type</option>
                            {masterData.documentTypes.map((type) => (
                              <option key={type.value} value={type.value}>
                                {type.label}
                              </option>
                            ))}
                          </select>
                          {errors.documents?.[actualIndex]?.documentType && (
                            <p className="text-xs text-red-500">
                              {errors.documents[actualIndex].documentType}
                            </p>
                          )}
                        </div>

                        {/* Document Number */}
                        <div className="space-y-2">
                          <label className="block text-xs font-medium text-gray-700">
                            Document Number{" "}
                            <span className="text-red-500">*</span>
                          </label>
                          <input
                            type="text"
                            value={document.documentNumber || ""}
                            onChange={(e) =>
                              updateDocument(
                                actualIndex,
                                "documentNumber",
                                e.target.value.toUpperCase()
                              )
                            }
                            placeholder="Document number"
                            className={`w-full px-3 py-2 text-sm border rounded focus:outline-none focus:ring-2 focus:ring-blue-500/20 ${
                              errors.documents?.[actualIndex]?.documentNumber
                                ? "border-red-500"
                                : "border-gray-300"
                            }`}
                          />
                          {errors.documents?.[actualIndex]?.documentNumber && (
                            <p className="text-xs text-red-500">
                              {errors.documents[actualIndex].documentNumber}
                            </p>
                          )}
                        </div>

                        {/* Country */}
                        <div className="space-y-2">
                          <label className="block text-xs font-medium text-gray-700">
                            Country <span className="text-red-500">*</span>
                          </label>
                          <select
                            value={document.country || ""}
                            onChange={(e) =>
                              updateDocument(
                                actualIndex,
                                "country",
                                e.target.value
                              )
                            }
                            className={`w-full px-3 py-2 text-sm border rounded focus:outline-none focus:ring-2 focus:ring-blue-500/20 ${
                              errors.documents?.[actualIndex]?.country
                                ? "border-red-500"
                                : "border-gray-300"
                            }`}
                          >
                            <option value="">Select country</option>
                            {masterData.countries.map((country) => (
                              <option key={country.code} value={country.code}>
                                {country.name}
                              </option>
                            ))}
                          </select>
                          {errors.documents?.[actualIndex]?.country && (
                            <p className="text-xs text-red-500">
                              {errors.documents[actualIndex].country}
                            </p>
                          )}
                        </div>

                        {/* Valid From */}
                        <div className="space-y-2">
                          <label className="block text-xs font-medium text-gray-700">
                            Valid From <span className="text-red-500">*</span>
                          </label>
                          <input
                            type="date"
                            value={document.validFrom || ""}
                            onChange={(e) =>
                              updateDocument(
                                actualIndex,
                                "validFrom",
                                e.target.value
                              )
                            }
                            max={new Date().toISOString().split("T")[0]}
                            className={`w-full px-3 py-2 text-sm border rounded focus:outline-none focus:ring-2 focus:ring-blue-500/20 ${
                              errors.documents?.[actualIndex]?.validFrom
                                ? "border-red-500"
                                : "border-gray-300"
                            }`}
                          />
                          {document.validFrom && (
                            <p className="text-xs text-gray-600">
                              Display: {formatDate(document.validFrom)}
                            </p>
                          )}
                          {errors.documents?.[actualIndex]?.validFrom && (
                            <p className="text-xs text-red-500">
                              {errors.documents[actualIndex].validFrom}
                            </p>
                          )}
                        </div>

                        {/* Valid To */}
                        <div className="space-y-2">
                          <label className="block text-xs font-medium text-gray-700">
                            Valid To <span className="text-red-500">*</span>
                          </label>
                          <input
                            type="date"
                            value={document.validTo || ""}
                            onChange={(e) =>
                              updateDocument(
                                actualIndex,
                                "validTo",
                                e.target.value
                              )
                            }
                            min={
                              document.validFrom ||
                              new Date().toISOString().split("T")[0]
                            }
                            className={`w-full px-3 py-2 text-sm border rounded focus:outline-none focus:ring-2 focus:ring-blue-500/20 ${
                              errors.documents?.[actualIndex]?.validTo
                                ? "border-red-500"
                                : "border-gray-300"
                            }`}
                          />
                          {document.validTo && (
                            <p className="text-xs text-gray-600">
                              Display: {formatDate(document.validTo)}
                            </p>
                          )}
                          {errors.documents?.[actualIndex]?.validTo && (
                            <p className="text-xs text-red-500">
                              {errors.documents[actualIndex].validTo}
                            </p>
                          )}
                        </div>

                        {/* File Upload */}
                        <div className="space-y-2">
                          <label className="block text-xs font-medium text-gray-700">
                            Document File
                          </label>

                          {document.fileName ? (
                            // File uploaded - show file info
                            <div className="flex items-center gap-2 p-2 bg-green-50 border border-green-200 rounded">
                              <span className="text-lg">
                                {getFileIcon(document.fileType)}
                              </span>
                              <div className="flex-1 min-w-0">
                                <p className="text-xs font-medium text-green-800 truncate">
                                  {document.fileName}
                                </p>
                                <p className="text-xs text-green-600">
                                  {formatFileSize(document.fileData)}
                                </p>
                              </div>
                              <button
                                onClick={() => removeFile(actualIndex)}
                                className="text-green-600 hover:text-green-800"
                                title="Remove file"
                              >
                                <X className="w-4 h-4" />
                              </button>
                            </div>
                          ) : (
                            // No file - show upload button
                            <div className="relative">
                              <input
                                ref={(el) =>
                                  (fileInputRefs.current[actualIndex] = el)
                                }
                                type="file"
                                accept=".jpg,.jpeg,.png,.gif,.pdf,.doc,.docx"
                                onChange={(e) =>
                                  handleFileSelect(actualIndex, e)
                                }
                                className="hidden"
                              />
                              <button
                                onClick={() =>
                                  fileInputRefs.current[actualIndex]?.click()
                                }
                                disabled={isUploading}
                                className="w-full px-3 py-2 text-sm border-2 border-dashed border-gray-300 rounded hover:border-gray-400 focus:outline-none focus:border-blue-500 transition-colors disabled:opacity-50"
                              >
                                {isUploading ? (
                                  <div className="flex items-center justify-center gap-2">
                                    <div className="w-4 h-4 border-2 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
                                    <span>Uploading...</span>
                                  </div>
                                ) : (
                                  <div className="flex items-center justify-center gap-2 text-gray-600">
                                    <Upload className="w-4 h-4" />
                                    <span>Choose file</span>
                                  </div>
                                )}
                              </button>
                            </div>
                          )}

                          <p className="text-xs text-gray-500">
                            Max 5MB. Formats: JPEG, PNG, GIF, PDF, DOC, DOCX
                          </p>
                        </div>
                      </div>

                      {/* Reference Number (optional) */}
                      <div className="mt-4">
                        <label className="block text-xs font-medium text-gray-700 mb-2">
                          Reference Number (Optional)
                        </label>
                        <input
                          type="text"
                          value={document.referenceNumber || ""}
                          onChange={(e) =>
                            updateDocument(
                              actualIndex,
                              "referenceNumber",
                              e.target.value
                            )
                          }
                          placeholder="Optional reference number"
                          className="w-full md:w-1/3 px-3 py-2 text-sm border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500/20"
                        />
                      </div>

                      {/* Show any validation errors for this document */}
                      {errors.documents?.[actualIndex] && (
                        <div className="mt-3 p-3 bg-red-50 border border-red-200 rounded">
                          <p className="text-sm text-red-700 font-medium mb-1">
                            Validation Errors:
                          </p>
                          <ul className="text-xs text-red-600 space-y-1">
                            {Object.entries(errors.documents[actualIndex]).map(
                              ([field, error]) => (
                                <li key={field}>‚Ä¢ {error}</li>
                              )
                            )}
                          </ul>
                        </div>
                      )}
                    </div>
                  );
                })}
            </div>
          </div>
        </div>
      ) : (
        /* Empty State */
        <div className="border-2 border-dashed border-gray-200 rounded-lg p-8 text-center">
          <FileText className="w-12 h-12 mx-auto mb-4 text-gray-300" />
          <h3 className="text-lg font-medium text-gray-900 mb-2">
            No Documents Added
          </h3>
          <p className="text-gray-500 mb-4">
            Add documents to verify transporter credentials and compliance.
          </p>
          <button onClick={addDocument} className={actionButtonTheme.primary}>
            <Plus className="w-4 h-4" />
            Add First Document
          </button>
        </div>
      )}

      {/* Global Validation Errors */}
      {errors.documents && typeof errors.documents === "string" && (
        <div className="mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
          <p className="text-sm text-red-700 flex items-center gap-2">
            ‚ö†Ô∏è {errors.documents}
          </p>
        </div>
      )}

      {/* Help Text */}
      <div className="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <h4 className="text-sm font-medium text-blue-900 mb-2">
          Document Guidelines:
        </h4>
        <ul className="text-sm text-blue-800 space-y-1">
          <li>
            ‚Ä¢ Document numbers must be unique within the same document type
          </li>
          <li>‚Ä¢ Valid from date cannot be in the future</li>
          <li>‚Ä¢ Valid to date must be after valid from date</li>
          <li>‚Ä¢ File uploads are optional but recommended for verification</li>
          <li>‚Ä¢ Supported formats: JPEG, PNG, GIF, PDF, DOC, DOCX (max 5MB)</li>
        </ul>
      </div>
    </div>
  );
};

export default DocumentsTab;
